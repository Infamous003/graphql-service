# USer type
type User {
  id: Int!
  username: String!
  createdAt: String!
}

# response type for follow/unfollow mutations
type FollowResponse {
  message: String # response from the api
}

# Queries exposed by GraphQL
type Query {
  followers(userId: Int!): [User!]!
  following(userId: Int!): [User!]!
}

# Mutations exposed by GraphQL
type Mutation {
  follow(followerId: Int!, followeeId: Int!): FollowResponse!
  unfollow(followerId: Int!, followeeId: Int!): FollowResponse!
}
